import { getUser, redirectUser } from "@astro-auth/core";
import { BASE_SITE_URL } from "src/config.astro";

const user = getUser({ client: Astro });

if (!user) {
  	return redirectUser(`/auth`);
  } else {
    return redirectUser(`/en`);
  }
